{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next", "google", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [],
  "rules": {
    //setting them to "off" did nothing, need to be set to 0.
    "require-jsdoc": 0,

    //added these bc they're throwing warnings/errors
    "import/no-anonymous-default-export": 0,
    "react-hooks/exhaustive-deps": 0,
    "react-hooks/rules-of-hooks": 0,
    "@next/next/no-img-element": 0,
    "jsx-a11y/alt-text": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
